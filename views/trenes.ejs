<%- include('header.ejs') %>

<div>
    <% trenes.forEach(t => { %>
        <h1>Tren # <%= t.id %></h1>
        <p>Nombre: <%= t.nombre %></p>
        <p>Capacidad: <%= t.capacidad %></p>
        <!-- Enlace como un botÃ³n de Bootstrap -->
        <button class="btn btn-info">
